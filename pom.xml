<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>io.inkstand</groupId>
		<artifactId>inkstand-parent</artifactId>
		<version>0.2.0-SNAPSHOT</version>
		<relativePath>inkstand-parent/pom.xml</relativePath>
	</parent>

	<artifactId>inkstand</artifactId>
	<version>0.2.0-SNAPSHOT</version>
	<name>${project.groupId}:${project.artifactId}</name>
	<packaging>pom</packaging>

	<modules>
		<module>inkstand-core</module>
		<module>inkstand-jcr</module>
		<module>inkstand-jcr-jackrabbit</module>
		<module>inkstand-http</module>
		<module>inkstand-http-undertow</module>
		<module>inkstand-deployments</module>
		<module>inkstand-ms</module>
		<module>inkstand-security</module>
		<module>inkstand-parent</module>
		<module>inkstand-cdi</module>
		<module>inkstand-it</module>
	</modules>

	<dependencies>
		<!-- Code Coverage -->
		<dependency>
			<groupId>org.slf4j</groupId>
			<artifactId>slf4j-api</artifactId>
		</dependency>
		<!-- Binding for Log4J -->
		<dependency>
			<groupId>org.apache.logging.log4j</groupId>
			<artifactId>log4j-slf4j-impl</artifactId>
			<scope>runtime</scope>
		</dependency>
		<!-- Log4j API and Core implementation required for binding -->
		<dependency>
			<groupId>org.apache.logging.log4j</groupId>
			<artifactId>log4j-api</artifactId>
			<scope>runtime</scope>
		</dependency>
		<dependency>
			<groupId>org.apache.logging.log4j</groupId>
			<artifactId>log4j-core</artifactId>
			<scope>runtime</scope>
		</dependency>
		<!-- Test libraries -->
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>org.mockito</groupId>
			<artifactId>mockito-all</artifactId>
			<scope>test</scope>
		</dependency>
	</dependencies>

</project>
